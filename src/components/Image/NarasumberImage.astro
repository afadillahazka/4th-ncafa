---
export interface Props {
  src: string;
  name: string;
  position: string;
  href: string;
}

const { src, name, position, href } = Astro.props;
---

<div class="col mt-1 mb-1">
  <div class="row row-cols-2 justify-content-center">
    <img class="img-fluid" src={src} alt="" />
  </div>
  <div class="row justify-content-center text-center ms-2 me-2 fs-5 fw-bold"><a href={href} class="text-decoration-none text-black lh-sm">{name}</a></div>
  <div class="row justify-content-center text-center ms-2 me-2 mt-2 fs-6 lh-sm">{position}</div>
</div>
