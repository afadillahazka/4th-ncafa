        display: flex;
        justify-content: center;
        align-items: center;

        animation: fadeIn 1s;
    }

    .loader > img {
        width: 40%;
    }

    .loader.fadeout {
        animation: fadeOut 1s;
        animation-fill-mode: forwards;
    }

    @keyframes fadeOut {
        100% {
            opacity: 0;
            visibility: hidden;
        }
    }

    @keyframes fadeIn {
        100% {
