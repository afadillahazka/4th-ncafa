    <ImageContainer title="silver sponsor">
      <SmallImage src="../sponsors/klinikaku2.png"/>
      <SmallImage src="../sponsors/kapsriyadi.png"/>
      <SmallImage src="../sponsors/sayurbox.png"/>
    </ImageContainer>
    <ImageContainer title="bronze sponsor">
      <ExtraSmallImage src="../sponsors/wardah.png" />
    </ImageContainer>
    </section>
    <section class="bg-image-ncafa">
    <MediaPartnerContainer title="media partners">
      <MediaPartner src="../mediapartner/sejutacita.png"/>
      <MediaPartner src="../mediapartner/eventcampus2.png"/>
      <MediaPartner src="../mediapartner/eventcenter2.png"/>
