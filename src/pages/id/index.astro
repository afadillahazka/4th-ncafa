---
import Layout from "../../layout/Layout.astro";
import Jumbotron from "../../components/Jumbotron.astro";
import Paragraph from "../../components/Home/Paragraph.astro";
import DateCardContainer from "../../components/Date/DateCardContainer.astro";
import DateCard from "../../components/Date/DateCard.astro";
import Date from "../../components/Date/Date.astro";
import Date3 from "../../components/Date/Date3.astro";
import ButtonContainer from "../../components/Button/ButtonContainer.astro";
import Button from "../../components/Button/Button.astro";
import ImageContainer from "../../components/Image/ImageContainer.astro";
import LargeImage from "../../components/Image/LargeImage.astro";
import MediumImage from "../../components/Image/MediumImage.astro";
import SmallImage from "../../components/Image/SmallImage.astro";
import VideoContainer from "../../components/Home/VideoContainer.astro";
import Video from "../../components/Home/Video.astro";
---

<Layout title="Beranda">
  <Jumbotron />
  <section class="top-gradient">
    <Paragraph />
    <VideoContainer title="Teaser">
      <Video />
    </VideoContainer>
  </section>
  <DateCardContainer title="Tanggal pelaksanaan">
    <DateCard>
      <Date subtitle="Session 1" date="Rabu, 01 Februari 2023" hour="" />
    </DateCard>
    <DateCard>
      <Date subtitle="Session 2" date="Kamis, 02 Februari 2023" hour="" />
    </DateCard>
  </DateCardContainer>
  <aside class="bg-image-ncafa">
    <ImageContainer title="platinum sponsor">
      <LargeImage src="../sponsors/angkasapura2.png" />
      <LargeImage src="../sponsors/indosatooredoo.png" />
      <LargeImage src="../sponsors/ptpii.png" />
    </ImageContainer>
    <ImageContainer title="gold sponsor">
      <MediumImage src="../sponsors/klinikaku2.png" />
    </ImageContainer>
    <ImageContainer title="Organized by">
      <SmallImage
        src="../eventorganizer/himaksitrilogi.png"
        alt="HIMAKSI Trilogi"
      />
    </ImageContainer>
    <ButtonContainer title="Poster" text="">
      <Button
        text="Lihat Poster"
        href="https://drive.google.com/file/d/1HHwfWWIHoySeUygg28SmKXHevpyAytlR/view"
      />
      <Button
        text="Unduh Poster"
        href="https://drive.google.com/uc?export=download&id=1HHwfWWIHoySeUygg28SmKXHevpyAytlR"
      />
    </ButtonContainer>
  </aside>
</Layout>
